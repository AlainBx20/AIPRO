{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm run install-all",
  "framework": "vite",
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "backend/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 